<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="wrap_content"
xmlns:app="http://schemas.android.com/apk/res-auto"
app:cardBackgroundColor="@color/white"
app:cardCornerRadius="@dimen/five"
app:cardUseCompatPadding="true"
app:cardElevation="3dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="@dimen/hundred"
            android:layout_height="@dimen/hundred"
            android:text="Empty"
            android:id="@+id/message"
            android:visibility="visible"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:textColor="@color/blue_grey_900"
            android:textSize="@dimen/text16"
            android:layout_margin="@dimen/ten"
            android:textStyle="normal"/>

        <Button
            android:text="Create New"
            android:id="@+id/createNew"
            android:layout_width="@dimen/two_fifty"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/ten"
            android:layout_centerHorizontal="true"
            android:textSize="16sp"
            android:layout_below="@id/linear_lists"
            android:background="@color/colorAccent"
            android:textColor="@color/white"
            />

<LinearLayout
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:id="@+id/linear_lists"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Keystores"
        android:id="@+id/theme_color"
        android:textColor="@color/black"
        android:textSize="@dimen/text16"
        android:layout_margin="@dimen/ten"
        android:textStyle="bold"/>



    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_margin="@dimen/ten"
        android:id="@+id/keystore_list"
        android:layout_height="match_parent">

    </androidx.recyclerview.widget.RecyclerView>


</LinearLayout>
    </RelativeLayout>


</androidx.cardview.widget.CardView>