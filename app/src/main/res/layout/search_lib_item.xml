<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_margin="@dimen/five"
    android:background="?attr/selectableItemBackground"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="@dimen/sixty"
        android:layout_height="@dimen/sixty"
        android:layout_margin="@dimen/five"
        android:background="@color/blue_300"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lib_image"
            android:layout_centerInParent="true"
            android:src="@drawable/image_29"
            />


    </RelativeLayout>

    <View
        android:layout_width="@dimen/ten"
        android:layout_height="match_parent"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/five"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/lib_title"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/blue_grey_900"
            android:textSize="@dimen/text16"
            android:text="Recyclerview"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/lib_package_name"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/blue_grey_900"
            android:textSize="@dimen/text14"
            android:text="androidx.recyclerview"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/lib_usages"
            android:textColor="@color/blue_grey_900"
            android:textSize="@dimen/text13"
            android:text="234 usages"/>

    </LinearLayout>




</LinearLayout>