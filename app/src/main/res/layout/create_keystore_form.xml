<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="@dimen/five"
    app:cardUseCompatPadding="true"
    app:cardElevation="3dp">


    <LinearLayout
        android:orientation="vertical"
        android:layout_margin="@dimen/ten"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView android:text=""
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textSize="16sp"
                  android:textStyle="bold"
            android:id="@+id/keystore_name"
                  android:layout_marginTop="10sp"
            />


        <TextView android:text="@string/keystore_password_label"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textSize="16sp"
                  android:textStyle="bold"
                  android:layout_marginTop="10sp"
            />
              
        <EditText android:id="@+id/keystore_password_et"
                  android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:inputType="textPassword"
                  />
        <TextView android:text="@string/KeyPasswordLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="10sp"
            />
        <EditText android:id="@+id/key_password_et"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            />




        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20sp"
            >

            <Button android:text="Cancel"
                    android:id="@+id/cancel_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                android:background="@color/red_50"
                android:textColor="@color/black"
                    android:minWidth="100sp"
                />

            <Button android:text="OK"
                    android:id="@+id/okay_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                android:background="@color/colorAccent"
                android:textColor="@color/white"
                    android:layout_marginLeft="20sp"
                    android:minWidth="100sp"
                />

        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>

